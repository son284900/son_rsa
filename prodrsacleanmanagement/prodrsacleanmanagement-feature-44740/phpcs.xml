<?xml version="1.0"?>
<ruleset name="RSA">

    <description>The RSA coding standard.</description>
    <arg name="extensions" value="php" />
    <arg name="tab-width" value="4"/>

    <!-- 適用コーディング規約の指定 -->
    <rule ref="PSR2" >
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>
    </rule>

    <!-- 出力に色を適用 -->
    <arg name="colors" />

    <!-- オプション p:進捗表示  s:エラー表示時にルールを表示 -->
    <arg value="s"/>

    <!-- 対象フォルダ -->

    <!-- 除外ディレクトリ -->
    <exclude-pattern>/bootstrap/</exclude-pattern>
    <exclude-pattern>/config/</exclude-pattern>
    <exclude-pattern>/database/</exclude-pattern>
    <exclude-pattern>/node_modules/</exclude-pattern>
    <exclude-pattern>/public/</exclude-pattern>
    <exclude-pattern>/resources/</exclude-pattern>
    <exclude-pattern>/routes/</exclude-pattern>
    <exclude-pattern>/storage/</exclude-pattern>
    <exclude-pattern>/vendor/</exclude-pattern>
    <exclude-pattern>/server.php</exclude-pattern>
    <exclude-pattern>/app/Console/Kernel.php</exclude-pattern>
    <exclude-pattern>/tests/</exclude-pattern>
    <exclude-pattern>/coverage/</exclude-pattern>
    <exclude-pattern>/spec/</exclude-pattern>
    <exclude-pattern>plugins/tapfront/spec/</exclude-pattern>
    <exclude-pattern>kahlan-config.php</exclude-pattern>
    <exclude-pattern>kahlan-config-plugin.php</exclude-pattern>

</ruleset>